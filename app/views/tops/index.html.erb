
<link rel="stylesheet" href="tops.scss">
<link rel="stylesheet" href="tops.css">

<%= render "a-header"%>

<div class="contents">
  <div class="left-contents">
    <div class="indexs">
      <div class="client-index">
        <%= link_to '顧客一覧', clients_path, method: :get, class: "btn-a" %>
      </div>
      <div class="task-index">
        <%= link_to 'タスク一覧', tasks_path, method: :get, class: "btn-a" %>
      </div>
    </div>
  </div>
  
  <div class="right-contents">
    <div class="tasks">
      <% @todays_task.each do |day| %>
        <div class='item'>
          <div class='date'>
            <%= day[:month] %>/<%= day[:date] %> <%= day[:wday]%>
          </div>
          <div class='content'>
            <% if day[:tasks].length != 0 %>
              <% day[:tasks].zip(day[:ids]).each do |task, ids| %>
                <% @c = Client.find_by(id: ids) %>
                <div class='plan-list'><%= "#{@c.last_name}様: "%><%= task %></div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
