        <% end %>
      </li>
  </div>

  <div class="btn-box">
    <div class="edit-standard">
      <%= link_to '編集', edit_client_path(@client), method: :get, class: "btn-j" %>
    </div>
    <% if @form.nil? %>
      <%= link_to '追加フォームの作成', new_form_path, method: :get, class: "btn-l" %>
    <% else %>
      <%= link_to 'フォーム名の編集', edit_form_path(@form.id,@client), method: :get, class: "btn-i" %>
    <% end %>

    <% if @addinfo.nil? %>
      <%= link_to '追加情報の入力', new_addinfo_path(:client_info => @client), method: :get, class: "btn-i" %>
    <% else %>
      <%= link_to '追加情報の編集', edit_addinfo_path(@addinfo.id, @client), method: :get, class: "btn-i" %>
    <% end %>
  </div>

</div>