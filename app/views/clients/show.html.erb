        <% if @addinfo.client_id == @client.id %>
          <div class="info-value"><%= @addinfo.add_text4 %></div>
        <% end %>
      </li>
      <li class="info-box">
        <div class="value-name"><%= "#{@form.f_name5}:" %></div>
        <% if @addinfo.client_id == @client.id %>
          <div class="info-value"><%= @addinfo.add_text5 %></div>
